<%- include('../partials/header') %>

<form action="/reviews/update/<%= review._id %>" method="POST">
  <label class="title"
    >Title of Review
    <input type="text" name="title" />
  </label>
  <label
    >Rating:
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </label>
  <label
    >Shade:
    <select name="shade">
      <option value="No Shade">No Shade</option>
      <option value="Minimal Shade">Miniimal Shade</option>
      <option value="Average Shade">Average Shade</option>
      <option value="Moderate Shade">Moderate Shade</option>
      <option value="Maximum Shade">Maximum Shade</option>
    </select>
  </label>
  <label
    >Ideal Age Range:
    <select name="ageRange">
      <option value="1 - 3 years">1 - 3 years</option>
      <option value="3 - 6 years">3 - 6 years</option>
      <option value="6 - 10 years">6 - 10 years</option>
      <option value="11 years +">11 years +</option>
      <option value="All Ages">All Ages</option>
    </select>
  </label>
  <label
    >Condition:
    <select name="condition">
      <option value="Poor">Poor</option>
      <option value="Fine">Fine</option>
      <option value="Good">Good</option>
      <option value="Great">Great</option>
    </select>
  </label>
  <label class="content"
    >Description:
    <input
      type="text"
      name="content"
      placeholder="Enter review description here"
    />
  </label>
  <input class="button" type="submit" value="Edit Review" />
</form>

<%- include('../partials/footer') %>
